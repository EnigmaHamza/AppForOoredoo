@using ooredooApplicationForWeb.Areas.Identity.Data;
@using ooredooApplicationForWeb.Controllers;
@model IEnumerable<ApplicationUser>


@{
    ViewBag.Title = "Liste utilisateurs";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";
}

<br />
<br />
<style>
    .form-control:focus {
        border-color: #ed1c24;
        box-shadow: 0 0 0 0.2rem rgba(255, 67, 71, 0.25);
    }
</style>
@*ceci est la partie search*@
<div class="card" style="margin-left:200px;margin-right:1000px;">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">


                <form asp-action="ListUsers" method="get" style="width:50%;">
                    <div class="input-group">
                        <input type="text"  placeholder="Nom utilisateur ...." class="form-control"  value="@ViewData["getUserDetails"]" name="userSearch" style="width:60%;">
                        <span class="input-group-append">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-search" style="   margin-right: 10px;">
                                </i>             
                            </button>
                           
                        </span>
                       
                        
                    </div>
                </form>


            </div>


        </div>
    </div>
</div>



<div class="card" style="margin-left:200px;margin-right:200px;">
    <div class="card-header border-0">
        <h3 class="card-title">
            Liste des utilisateurs
        </h3>
        <div class="card-tools">

            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>email</th>
                    <th>Id </th>
                    <th>Editer</th>
                    <th>désactiver</th>
                    <th>more</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>


                        <td>
                            @user.Nom
                        </td>
                        <td>
                            @user.Prenom
                        </td>
                        <td><i class="fas fa-user"></i> @user.UserName    </td>
                        <td>
                            @user.Id <small class="text-success mr-1">    Unique </small>
                        </td>
                        <td>
                            <a asp-action="EditUser" asp-controller="Administration" style="color:red"
                               asp-route-id="@user.Id"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                            <a role="button" asp-action="DeleteUser" asp-route-id="@user.Id" style="color:red"><i class="fas fa-user-minus"></i></a>



                        </td>
                        <td>
                            <a href="#" class="text-muted">
                                <i class="fas fa-ellipsis-h"></i>
                            </a>
                        </td>


                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>



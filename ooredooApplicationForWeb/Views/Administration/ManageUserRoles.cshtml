@using ooredooApplicationForWeb.ViewModels;
@model List<UserRolesViewModel>

@{
    ViewData["Title"] = "ManageUserRoles";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";
}

@{
    var userId = ViewBag.userId;
}

<br />
<br />
<br />
<form method="post">
    <div class="card" style="margin-left: 600px;margin-right: 600px;">
        <div class="card-header border-0">
            <h2 class="card-title" style="font-size:22px;">
                Ajouter ou supprimer un role à cet utilisateur
            </h2>

            <div class="card-tools">

                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                </a>
            </div>
        </div>
        <hr />
        <div class="card-body table-responsive p-0">

            <center>
                <a class="navbar-brand" href="#">
                    <img src="/img/roles/addrole.png" alt="Logo" style="width:250px;">
                </a>




                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <div class="row">

                    <input type="submit" value="Update" class="btn btn-outline-danger"
                           style="width:40%;margin-right:10px;margin-left:50px;" />
                    <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-outline-danger" style="width:40%">Cancel</a>

                </div>
               
            </center>
        </div>
    </div>
    
</form>



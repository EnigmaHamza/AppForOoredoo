@using ooredooApplicationForWeb.ViewModels;
@model EditRoleViewModel

@{
    ViewBag.Title = "edit  Role";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";
}

<h1>Modification du  Role</h1>
<br />
<form method="post" class="mt-3">
    <div class="card" style="margin-left: 400px;margin-right: 400px;">
        <div class="card-header border-0">
            <h2 class="card-title" style="font-size:22px;">
                Modifier ce role
            </h2>

            <div class="card-tools">

                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                </a>
            </div>
        </div>
        <hr />
        <div class="card-body table-responsive p-0" >

            <div class="form-group row" style="width:90%;">
                <div class="col-sm-1"><p></p></div>
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row" style="width:90%;">
                <div class="col-sm-1"><p></p></div>
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row"style="width:90%;">
                <div class="col-sm-1"><p></p></div>
                <div class="col-sm-2"><p></p></div>
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-outline-danger" style="width:40%">Update</button>
                    <a asp-action="ListRoles" class="btn btn-outline-danger" style="width:50%">Cancel</a>
                </div>
            </div>

        </div>
    </div>
    <br />
    <hr />
    <br />
    <div class="card" style="margin-left: 400px;margin-right: 400px;">
        <div class="card-header border-0">
            <h2 class="card-title" style="font-size:22px;">
                Utilisateurs appartenant à ce role
            </h2>

            <div class="card-tools">

                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                </a>
            </div>
        </div>
        <hr />
        <div class="card-body table-responsive p-0">
            @if (Model.Users.Any())
            {
                <table class="table table-striped table-valign-middle" >
                    <thead>
                        <tr>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <h5 style="text-align:center">@user</h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
        <center>
            <a class="navbar-brand" href="#">
                <img src="/img/roles/Aucun user in role.png" alt="Logo" style="width:400px;">
            </a>
        </center>

            }

        </div>

        <br />
        <center>
            <a asp-controller="Administration" asp-action="EditUsersInRole"
               asp-route-roleId="@Model.Id" class="btn btn-outline-danger" style="width:50%;margin-left:30px;">
                Ajouter ou supprimer des utulisateurs de ce role
            </a>
        </center>

        <br />
    </div>
</form>
@using Microsoft.AspNetCore.Identity;
@using ooredooApplicationForWeb.Areas.Identity.Data;
@inject SignInManager<ApplicationUser> signInManager ;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ooredoo | dep marketing</title>

    <partial name="Admin/_Styles" />
    <script src="/js/adminlte.min.js"></script>


</head>
<body class="hold-transition sidebar-mini" onload="initViz(); " style="  background-color: #f8f9fa !important ;">
    <div class="wrapper">

        <!-- Navbar -->
        <partial name="Admin/_TopNavigation" />
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <partial name="Admin/_Sidebar" />

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid" style=" width: 98%;">
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("admin"))
                    {
                    <div class="d-flex align-items-center p-3 my-3 text-white bg-dark rounded shadow-sm"style="        background-color: #ac0035 !important;">

                        <div class="lh-1">
                            <h1 class="h6 mb-0  lh-1" style="color:white;"><i class="fas fa-user-shield" style="color:white;">  </i>   Admin mode</h1>

                        </div>
                    </div>
                    }

                        @RenderBody()
                        <!-- /.row -->
                    </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->

    </div>



    <!-- ./wrapper -->
    <partial name="Admin/_Scripts" />
</body>

</html>

@model IEnumerable<ooredooApplicationForWeb.Data.Categorie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";
}


<br /><br />

<div class="card" style="margin-left:200px;margin-right:200px;">
    <div class="card-header border-0">
        <h3 class="card-title">
            Suivie des catégories 
        </h3>
        <div class="card-tools">

            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>

    <div class="card-body table-responsive p-0">

        <table class="table table-striped table-valign-middle">
           <thead>
                <tr>
                    <th>Id categorie</th>
                    <th>Catégorie des produit</th>
                    <th> Nombre observations Total</th>
                    <th>
                        Observation positives
                    </th>
                    <th> Observation négatives </th>
                    <th>Plus de détail</th>


                </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="        color: #007bff">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomCategorie)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreObservations)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NbObservationsPositives)

                                <small class="text-success mr-1">
                                    <i class="fas fa-arrow-up"></i>
                                    +
                                </small>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NbObservationsNegatives)

                                <small class="text-danger mr-1">
                                    <i class="fas fa-arrow-down"></i>
                                    -
                                </small>
                            </td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" style="color:darkred" >    Afficher </a>
                                

                            </td>
                        </tr>
                    }

                </tbody>
            
        </table>
    </div>
</div>







@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
    Layout = "~/Views/Shared/admin/_LayoutAdmin.cshtml";

}

<br />
<br />
<br />

<div class="card" style="margin-left: 300px;margin-right: 300px;">
    <div class="card-header border-0">
        <h2 class="card-title" style="font-size:22px;">
            La liste des roles
        </h2>

        <div class="card-tools">

            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    
    <div class="card-body table-responsive p-0" style="text-align: center; ">
        @if (Model.Any())
        {
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>Nom du role</th>
                        <th>Role id </th>
                        <th>Modifier</th>
                        <th>Supprimer</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var role in Model)
                    {


                        <tr>
                            <td style="font-size:16px;">@role.Name</td>
                            <td style="font-size:14px;">
                                @role.Id
                            </td>

                            <td>

                                <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" style="width:80%;color:darkred;">Edit</a>

                            </td>
                            <td>
                                <a href="#" style="width:60%;color:darkred;">Delete</a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>

        }
        else
        {
         
    <div class="card-body table-responsive p-0" style="text-align: center; ">
               <br />
        <center>
            <a class="navbar-brand" href="#">
                <img src="/img/roles/Aucun role trouvé.png" alt="Logo" style="width:750px;">
            </a>
        </center>
       
              

    </div>
            <br />
        }
    </div>
    <br />

</div>
<br />
<div class="card" style="margin-left: 300px;margin-right: 300px;">
    <div class="card-header border-0">
        <h2 class="card-title" style="font-size:19px;">
            Pour ajouter un nouveau role , appuyer sur ce bouton
        </h2>

        <div class="card-tools">

            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    <br />
    <div class="card-body table-responsive p-0" style="text-align: center; ">
        <br />
        <a class="btn btn-outline-danger" style="width:20%"
           asp-controller="administration" asp-action="CreateRole">
            Créer role
        </a>
        <a class="btn btn-outline-danger" style="width:20%"
           asp-controller="Home" asp-action="index">
           annuler 
        </a>

    </div>
    <br />

</div>


